{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noLib": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "removeComments": false,
    "importHelpers": true,
    "listFiles": false,
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types", "./types"
    ]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "__tests__", "coverage"]
}
