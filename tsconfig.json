{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noLib": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "removeComments": false,
    "importHelpers": true,
    "listFiles": false,
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "__tests__", "coverage", "jest.config.js"]
}
